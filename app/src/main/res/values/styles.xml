<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_view</item>
        <item name="colorPrimaryDark">#00000000</item>
        <!--<item name="android:windowFullscreen">true</item>-->

    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">#000000</item>
        <item name="android:background">@color/alert_usun</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>
    <style name="WindowTitleStyle"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="StartDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#B92A2A</item>
        <item name="android:background">#2E2E2E</item>
        <item name="android:textColorPrimary">#0C0B0B</item>
        <item name="android:fontFamily">@font/myriad</item>

        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>
    <style name="MyDialogImport" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">#000000</item>
        <item name="android:background">#0033FF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>

    <style name="MyDialogExport" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">#000000</item>
        <item name="android:background">#006600</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>

</resources>
